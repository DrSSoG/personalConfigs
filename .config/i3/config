# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
	position top
	#tray_output primary
	font pango:Noto Sans 11
	separator_symbol "|<>|"
	colors {
		background $greenish	
		statusline #ffffff
		separator #000000
		focused_workspace #000000 $brownish #ffffff
	}
}

# Manages popups during fs
